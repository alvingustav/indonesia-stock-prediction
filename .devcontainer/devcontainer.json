{
    "name": "Indonesia Stock Prediction - Pre-trained Models",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter", 
                "ms-toolsai.jupyter",
                "ms-vscode.azurecli",
                "ms-azuretools.vscode-docker",
                "ms-azuretools.vscode-azurecontainerapps",
                "charliermarsh.ruff",
                "GitHub.copilot",
                "eamodio.gitlens"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "python.linting.enabled": true,
                "python.formatting.provider": "black",
                "terminal.integrated.shell.linux": "/bin/bash",
                "git.lfs.enabled": true
            }
        }
    },
    "forwardPorts": [8501],
    "portsAttributes": {
        "8501": {
            "label": "Stock Prediction App",
            "onAutoForward": "openPreview",
            "protocol": "http"
        }
    },
    "postCreateCommand": "bash scripts/setup-codespace.sh",
    "postAttachCommand": "bash scripts/setup-models.sh",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/git-lfs:1": {}
    },
    "mounts": [
        "source=${localWorkspaceFolder}/models,target=/workspace/models,type=bind,consistency=cached"
    ]
}
